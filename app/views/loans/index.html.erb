<h1>All loans</h1>
<h2>Loans inside the database would go here.</h2>
<h3>Search for loans by:</h3>
<% form_tag(search_path, :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% @loans.each do |i| %>
  <p><%= link_to i.id, loan_path(i) %>, customer name: <%= i.customer_name %>, is approved? <%= i.approval %>
<% end %>
