<h1>All loans</h1>
<h2>Loans inside the database would go here.</h2>
<%= form_with url: loans_search_path, method: :get do |form| %> <!-- can replace loans_search_path with /loans/search -->
  <%= form.label :query, "Search using Customer Name:" %>
  <%= form.text_field :query %>
  or 
  <%= form.label :query2, "Search using Loan Number:" %>
  <%= form.number_field :query2 %>
  <%= form.submit "Search" %>
<% end %>


<% @loans.each do |i| %>
  <p><%= link_to i.id, loan_path(i) %>, customer name: <%= i.customer_name %>, is approved? <%= i.approval %>
<% end %>
